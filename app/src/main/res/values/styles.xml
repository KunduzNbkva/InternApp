<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbarTextStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>

    </style>

    <style name="mainTextStyle">
       <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="secondaryTextStyle">
        <item name="android:textColor">#251F1F</item>
        <item name="android:fontFamily">@font/montserrat_thin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>